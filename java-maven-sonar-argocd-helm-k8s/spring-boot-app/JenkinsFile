pipeline {
    agent any
    
    environment {
        DOCKERHUB_USERNAME = 'akash-anchi'  // Replace with your Docker Hub username
        DOCKERHUB_PASSWORD = credentials('docker-hub-password')  // Use Jenkins credentials for Docker Hub login
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    def app = docker.build("index.docker.io/${DOCKERHUB_USERNAME}/ultimate-cicd:19")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Log into Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        // Push the image to your Docker Hub repository
                        app.push()
                    }
                }
            }
        }
    }
}
